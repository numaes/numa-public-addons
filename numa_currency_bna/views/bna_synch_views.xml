<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_numa_bna_currency_config_company" model="ir.ui.view">
            <field name="name">numa bna currency settings</field>
            <field name="model">res.company</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="numa_account_extended.numa_company_config_page_view" />
            <field name="arch" type="xml">
                <xpath expr="//notebook[@name='config']" position="inside" >
                    <page name="bna" string="BNA Cotizaciones">
                        <group>
                            <label string="SincronizaciÃ³n"/>
                            <div>
                                <group>
                                    <field name="bna_tipo_cotizacion" style="width:200px !important;"/>
                                    <field name="bna_valor_moneda" style="width:200px !important;"/>
                                </group>
                            </div>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_numa_bna_currency_search" model="ir.ui.view">
            <field name="name">numa bna currency search</field>
            <field name="model">bna_currency</field>
            <field name="arch" type="xml">
                <tree string="Monedas BNA" editable="top">
                    <field name="name"/>
                    <field name="currency_id"/>
                    <field name="bna_unit"/>
                    <field name="bna_refresh"/>
                </tree>
            </field>
        </record>

        <record id="view_numa_bna_currency_tree" model="ir.ui.view">
            <field name="name">numa bna currency tree</field>
            <field name="model">bna_currency</field>
            <field name="arch" type="xml">
                <tree string="Monedas BNA" editable="top">
                    <field name="name"/>
                    <field name="currency_id"/>
                    <field name="bna_unit"/>
                    <field name="bna_refresh"/>
                </tree>
            </field>
        </record>


		<record id="action_bna_monedas" model="ir.actions.act_window">
			<field name="name">Monedas BNA</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">bna_currency</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
		</record>

        <menuitem name="Monedas BNA" id="bna_monedas_submenu" action="action_bna_monedas" parent="account.menu_config_multi_currency" sequence="30"/>

    </data>
</odoo>
