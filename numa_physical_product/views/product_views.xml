<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Products template Form View -->
        <record model="ir.ui.view" id="product_template_form_view">
            <field name="name">Product Template Physical</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='inventory']/group[@name='group_lots_and_weight']" position="after">
                    <group name="physical_characteristics" string="Physical characteristics"
                           attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}" >
                        <field name="product_width" />
                        <field name="product_length" />
                        <field name="product_height" />
                        <field name="surface" />
                        <field name="volume" />
                        <field name="weight" />
                    </group>
                    <group name="weight_computation" string="Weight computation">
                        <field name="weight_kind" />
                        <field name="weight_factor" attrs="{'invisible':[('weight_kind','=','normal')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Products variant Form View -->
        <record model="ir.ui.view" id="product_normal_form_view">
            <field name="name">Product Variant Physical</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='inventory']/group[@name='weight_computation']" position="inside">
                    <field name="variant_width" invisible="True"/>
                    <field name="variant_length" invisible="True" />
                    <field name="variant_height" invisible="True" />
                    <field name="variant_surface" invisible="True" />
                    <field name="variant_volume" invisible="True" />
                    <field name="variant_weight" invisible="True" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
