<?xml version="1.0"?>
<odoo>
    <data>
    
        <!-- Products template Form View -->
        <record model="ir.ui.view" id="physical_product_template_form_view">
            <field name="name">Product Template Physical</field>
            <field name="model">product.template</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="stock.view_template_property_form" />
            <field name="arch" type="xml">
                <xpath expr="//label[@for='weight']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute>
                </xpath>
                <xpath expr="//label[@for='volume']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute>
                </xpath>
                <xpath expr="//div[@name='weight']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute>
                </xpath>
                <xpath expr="//div[@name='volume']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute>
                </xpath>
                <xpath expr="//group[@name='inventory']" position="after">
                    <group name="physical" string="Physical characteristics" attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}" col="4" colspan="4">
                        <group  name="physical_data" colspan="2">
                            <field name="weight_kind" />
                            <field name="weight_factor" attrs="{'invisible':[('weight_kind','=','normal')]}"/>
                            <field name="width" />
                            <field name="length" />
                            <field name="height" />
                            <field name="surface" />
                        </group>
                        <group name="physical_weight" colspan="2">
                            <field name="weight"/>
                            <field name="volume"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Products variat Form View -->
        <record model="ir.ui.view" id="physical_product_normal_form_view">
            <field name="name">Product Variant Physical</field>
            <field name="model">product.product</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='weight_kind']" position="after" >
                    <field name="variant_width" invisible="True"/>
                    <field name="variant_length" invisible="True" />
                    <field name="variant_height" invisible="True" />
                    <field name="variant_surface" invisible="True" />
                    <field name="variant_volume" invisible="True" />
                    <field name="variant_weight" invisible="True" />
                </xpath>
            </field>
        </record>

        <record id="product_pricelist_view" model="ir.ui.view">
            <field name="name">Pricelist with show items button</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view" />
            <field name="arch" type="xml">
                <data>
                    <field name="item_ids" position="before">
                        <button name="action_show_items"
                                type="object"
                                string="Show items" />
                    </field>
                </data>
            </field>
        </record>


    </data>
</odoo>
