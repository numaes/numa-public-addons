<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="product_pricelist_item_view_search">
            <field name="name">product.pricelist.item.search extended</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_view_search"/>
            <field name="arch" type="xml">
                <filter name="Product Rule" position="before">
                    <field name="name"/>
                    <group position="replace">
                        <group expand="0" string="Group by">
                            <filter string="Pricelist"
                              name="groupby_vendor"
                              domain="[]"
                              context="{'group_by': 'pricelist_id'}"
                              groups="product.group_product_pricelist"/>
                        </group>
                    </group>
                </filter>
            </field>
        </record>

        <record id="product_pricelist_item_tree_view" model="ir.ui.view">
          <field name="name">product.pricelist.item.tree extended</field>
          <field name="model">product.pricelist.item</field>
          <field name="inherit_id" ref="product.product_pricelist_item_tree_view"/>
          <field name="arch" type="xml">
              <field name="name" position="replace">
                  <field name="name"/>
                  <field name="description"/>
              </field>
          </field>
        </record>

        <record id="product_pricelist_item_tree_view_from_product" model="ir.ui.view">
            <!-- Access and edit price rules from a given product/product variant -->
            <field name="name">product.pricelist.item.tree extended</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view_from_product"/>
            <field name="arch" type="xml">
                <field name="pricelist_id" position="before">
                    <field name="sequence" widget="handle"/>
                </field>
                <field name="categ_id" position="replace">
                    <field name="category_ids" widget="many2many_tags"
                      invisible="context.get('active_model')!='product.category'"
                      options="{'no_create_edit':1, 'no_open': 1}"/>
                </field>
                <field name="product_tmpl_id" position="replace">
                    <field name="product_tmpl_ids"  widget="many2many_tags"
                      invisible="context.get('active_model')!='product.category'"
                      domain="[
                        ('categ_id', '=', context.get('default_categ_id', True)),
                        '|', ('company_id', '=', company_id), ('company_id', '=', False)
                      ]"
                      options="{'no_create_edit':1, 'no_open': 1}"/>
                </field>
                <field name="product_id" position="replace">
                    <field name="product_ids"  widget="many2many_tags"
                      groups="product.group_product_variant"
                      invisible="context.get('product_without_variants', False)"
                      readonly="context.get('active_model')=='product.product'"
                      attrs="{'required': [('applied_on', '=', '0_product_variant')]}"
                      domain="[
                        '|', '|',
                        ('id', '=', context.get('default_product_id', True)),
                        ('product_tmpl_id', '=', context.get('default_product_tmpl_id', True)),
                        ('categ_id', '=', context.get('default_categ_id', True)),
                        '|', ('company_id', '=', company_id), ('company_id', '=', False)
                      ]"
                      options="{'no_create_edit':1, 'no_open': 1}"
                      />
                    <field name="attribute_value_ids"  widget="many2many_tags"/>
                </field>
            </field>
        </record>

        <record id="product_pricelist_item_form_view" model="ir.ui.view">
            <field name="name">product.pricelist.item.form extended</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
            <field name="arch" type="xml">
                <group name="pricelist_rule_target" position="replace">
                    <group name="pricelist_rule_target">
                        <field name="description" invisible="True"/>
                        <field name="price" invisible="True"/>
                        <field name="category_ids" widget="many2many_tags" options="{'no_create':1}"/>
                        <field name="product_tmpl_ids" widget="many2many_tags" options="{'no_create':1}"/>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create':1}"/>
                        <field name="attribute_value_ids" widget="many2many_tags" options="{'no_create':1}"/>
                    </group>
                </group>
            </field>
        </record>

        <record id="product_pricelist_view" model="ir.ui.view">
            <field name="name">product.pricelist.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <field name="item_ids" position="attributes">
                    <attribute name="options">{'post_refresh':True}</attribute>
                </field>
                <xpath expr="//notebook//field[@name='item_ids']/tree" position="replace">
                    <tree string="Pricelist Items">
                        <field name="sequence" widget="handle"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="price"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </tree>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
