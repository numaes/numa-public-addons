<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="backorder_id" position="after">
                    <field name="picking_weight"/>
                    <field name="picking_volume"/>
                </field>

                <xpath expr="//page[@name='operations']//tree//field[@name='lot_ids']" position="after">
                    <field name="unit_weight" invisible="True"/>
                    <field name="unit_surface" invisible="True"/>
                    <field name="unit_volume" invisible="True"/>
                    <field name="total_weight" readonly="1" force_save="1"/>
                    <field name="total_volume" readonly="1" force_save="1"/>
                </xpath>

                <xpath expr="//page[@name='operations']//form//field[@name='description_picking']" position="after">
                    <field name="unit_weight" />
                    <field name="unit_surface" />
                    <field name="unit_volume" />
                    <field name="total_weight"/>
                    <field name="total_volume"/>
                </xpath>

            </field>
        </record>

        <record id="view_move_tree" model="ir.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree"/>
            <field name="arch" type="xml">
                <field name="product_uom" position="after">
                    <field name="total_weight"/>
                    <field name="total_volume"/>
                </field>
            </field>
        </record>

        <record id="view_stock_move_line_operation_tree" model="ir.ui.view">
            <field name="name">stock.move.line.operations.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">
                <field name="product_uom_id" position="after">
                    <field name="unit_weight" readonly="1" force_save="1"/>
                    <field name="unit_surface" invisible="True"/>
                    <field name="unit_volume" invisible="True"/>
                    <field name="total_weight"/>
                    <field name="total_volume"/>
                </field>
            </field>
        </record>

        <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
            <field name="name">stock.move.line.operations.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <field name="product_uom_id" position="after">
                    <field name="unit_weight" readonly="1" force_save="1"/>
                    <field name="unit_surface" invisible="True"/>
                    <field name="unit_volume" invisible="True"/>
                    <field name="total_weight"/>
                    <field name="total_volume"/>
                </field>
            </field>
        </record>

        <record id="view_move_tree_receipt_picking" model="ir.ui.view">
            <field name="name">stock.move.tree2</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree_receipt_picking"/>
            <field name="arch" type="xml">
                <field name="product_uom" position="after">
                    <field name="total_weight"/>
                    <field name="total_volume"/>
                </field>
            </field>
        </record>

        <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">stock.move.line.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <field name="reference" position="after">
                    <field name="partner_id" readonly="1" force_save="1"/>
                    <field name="sale_order_id" readonly="1" force_save="1"/>
                </field>
                <field name="product_uom_id" position="after">
                    <field name="unit_weight" readonly="1" force_save="1"/>
                    <field name="unit_surface" invisible="True"/>
                    <field name="unit_volume" invisible="True"/>
                    <field name="total_weight"/>
                    <field name="total_volume"/>
                </field>
            </field>
        </record>

        <record id="view_move_line_form" model="ir.ui.view">
            <field name="name">stock.move.line.form</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <field name="reference" position="after">
                    <field name="partner_id" readonly="1" force_save="1"/>
                    <field name="sale_order_id" readonly="1" force_save="1"/>
                </field>
                <field name="lot_name" position="after">
                    <field name="unit_weight" />
                    <field name="unit_surface" />
                    <field name="unit_volume" />
                    <field name="total_weight"/>
                    <field name="total_volume"/>
                </field>
            </field>
        </record>

        <record id="view_physical_move_pivot" model="ir.ui.view">
            <field name="name">stock.physical.move.pivot</field>
            <field name="model">stock.move.line</field>
            <field name="arch" type="xml">
                <pivot string="Stock Moves Analysis" sample="1">
                    <field name="product_id" type="row"/>
                    <field name="location_dest_id" groups="stock.group_stock_multi_locations" type="row"/>
                    <field name="qty_done" type="measure"/>
                    <field name="total_weight" type="measure"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>
