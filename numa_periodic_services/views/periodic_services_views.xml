<?xml version="1.0"?>
<openerp>
    <data>

        <menuitem name="Periodic Services" parent="base.menu_custom" id="periodic_service_submenu"/>

        <record id="periodic_service_form_view" model="ir.ui.view">
            <field name="name">Periodic Service form</field>
            <field name="model">base.periodic_service</field>
            <field name="arch" type="xml">
                <form string="Exception">
                    <header>
                        <button name="action_test"
                                type="object"
                                string="Go to test mode"
                                states="draft,running,maintenance"/>
                        <button name="trigger"
                                type="object"
                                string="Manual trigger"
                                states="testing,maintenance"/>
                        <button name="action_into_operation"
                                type="object"
                                string="Set normal operation"
                                states="draft,testing,maintenance"/>
                        <button name="action_into_maintenance"
                                type="object"
                                string="Go into maintenance mode"
                                states="running"/>
                        <button name="action_into_configuration"
                                type="object"
                                string="Back to configuration"
                                states="testing,running,maintenance,canceled"/>
                        <button name="action_cancel"
                                type="object"
                                string="Cancel service"
                                states="draft,testing,running,maintenance"/>

                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons">
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group name="settings" string="Settings">
                            <field name="type"/>
                            <field name="next_execution"/>
                            <field name="interval_value"/>
                            <field name="interval_type"/>
                        </group>
                        <group name="specific_data" string="Specific data">
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="periodic_service_list_view" model="ir.ui.view">
            <field name="name">Periodic Service list</field>
            <field name="model">base.periodic_service</field>
            <field name="arch" type="xml">
                <list string="Periodic Services" >
                    <field name="name" select="True"/>
                    <field name="type" select="True" />
                    <field name="next_execution" select="True" />
                    <field name="error_count" select="True" />
                    <field name="state" select="True" />
                </list>
            </field>
        </record>

        <record id="periodic_service_search_view" model="ir.ui.view">
            <field name="name">Periodic Service search</field>
            <field name="model">base.periodic_service</field>
            <field name="arch" type="xml">
                <search string="Periodic Services" >
                    <filter string="Running services" name="running_services"
                            domain="[('state','=','running')]"/>
                    <separator orientation="vertical"/>
                    <field name="name"/>
                    <field name="type" />
                    <field name="state" />
                    <group expand="0" string="Group by">
                        <filter string="State" name="state_grouped" context="{'group_by': 'state'}"/>
                        <filter string="Type" name="type_grouped" context="{'group_by': 'type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="periodic_service_action" model="ir.actions.act_window">
            <field name="name">Periodic Service</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.periodic_service</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                  Periodic Services
              </p>
            </field>
        </record>

        <menuitem id="periodic_service_menu"
            action="periodic_service_action"
            parent="periodic_service_submenu"
            sequence="10"/>

    </data>
</openerp>
