<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sale_order_physical_form_view">
            <field name="name">sale.order.physical.form</field>
            <field name="model">sale.order</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form/field[@name='name']" position="after">
                    <group attrs="{'invisible': [('display_type', '=', False)]}">
                        <group>
                            <field name="unit_width"/>
                            <field name="unit_length"/>
                            <field name="unit_height"/>
                        </group>
                        <group>
                            <field name="unit_surface"/>
                            <field name="unit_weight"/>
                            <field name="unit_volume"/>
                        </group>
                        <group>
                            <field name="total_surface"/>
                            <field name="total_weight"/>
                            <field name="total_volume"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="unit_width" invisible="1"/>
                    <field name="unit_length" invisible="1"/>
                    <field name="unit_height" invisible="1"/>
                    <field name="unit_surface" invisible="1"/>
                    <field name="unit_weight" invisible="1"/>
                    <field name="unit_volume" invisible="1"/>
                    <field name="total_surface" invisible="1"/>
                    <field name="total_weight" invisible="1"/>
                    <field name="total_volume" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                    <field name="price_qty" readonly="True" force_save="True"/>
                    <field name="unit_price_uom_id"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="price_qty" readonly="True" force_save="True"/>
                    <field name="unit_price_uom_id"/>
                </xpath>
                <xpath expr="//group[@name='sales_person']" position="before">
                    <group string="Package Information" name="package_information">
                        <field name="so_weight"/>
                        <field name="so_volume"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
