<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Products template Form View -->
        <record model="ir.ui.view" id="product_template_form_view">
            <field name="name">Product Template Physical Sale</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='weight_computation']/field[@name='weight_kind']" position="before">
                    <field name="price_base" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
