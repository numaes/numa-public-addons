<?xml version="1.0"?>
<odoo>
	<data>
        <record model="ir.ui.view" id="numa_purchase_order_global_discount_form_view">
            <field name="name">Numa Purchase Order Discount Form</field>
            <field name="model">purchase.order</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="numa_account_extended.numa_purchase_order_extended_form_view"/>
            <field name="arch" type="xml">
				<xpath expr="//group[@name='tax_perceptions']" position="before">
                    <group colspan="4">
                        <field name="discount_ids" nolabel="1"  colspan="4">
                            <tree editable="bottom" string="Discounts">
                                <field name="display_discount_name"/>
                                <!--Need invisible fields for on_change to create all necessary info -->
                                <field name="manual" invisible="0"/>
                                <field name="base"/>
                                <field name="percent"/>
                                <field name="amount"/>
                                <field name="account_id"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="product_tmpl_id"/>
                                <field name="product_id"/>
                                <field name="product_categ_id"/>
                                <field name="product_trademark_id"/>
                                <field name="product_attr_value_id"/>
                                <field name="product_lot_id"/>
                                <field name="product_serial_id"/>
                                <field name="tax_id"/>
                                <field name="amount_tax"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
			</field>
        </record>

        <record model="ir.ui.view" id="numa_purchase_order_discount_form_view">
            <field name="name">Numa Purchase Order Form</field>
            <field name="model">purchase.order</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="numa_account_extended.numa_purchase_order_extended_form_view" />
            <field name="arch" type="xml">
				<xpath expr="//field[@name='amount_untaxed']" position="before">
                    <field name="amount_untaxed_nodiscounts"/>
                    <field name="amount_discounts"/>
                </xpath>
			</field>
        </record>

        <record model="ir.ui.view" id="numa_purchase_pricelist_form_view">
            <field name="name">Numa Purchase Pricelist Form</field>
            <field name="model">purchase.order</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
				<xpath expr="//field[@name='date_order']" position="after">
                    <field name="pricelist_id"/>
                </xpath>
			</field>
        </record>

	</data>
</odoo>
