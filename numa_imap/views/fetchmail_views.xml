<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record  id="view_message_form" model="ir.ui.view">
        <field name="name">mail.message.form.fetchmail</field>
        <field name="model">mail.message</field>
        <field name="inherit_id" ref="mail.view_message_form"/>
        <field name="arch" type="xml">
            <field name="mail_server_id" position="after">
                <field name="fetchmail_server_id"/>            </field>
            <field name="notification_ids" position="after">
                <field name="child_ids" />
            </field>
        </field>
    </record>

    <record id="view_email_server_form" model="ir.ui.view">
        <field name="name">fetchmail.server.form</field>
        <field name="model">fetchmail.server</field>
        <field name="inherit_id" ref="fetchmail.view_email_server_form"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="initially_from" />
            </field>
        </field>
    </record>

</odoo>
