<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Acuerdos -->

        <record model="ir.ui.view" id="acuerdos_tree">
            <field name="name">ACUMAR Acuerdos tree</field>
            <field name="model">acumar.acuerdo</field>
            <field name="arch" type="xml">
                <tree string="Acuerdos">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="partners" widget="many2many_tags"/>
                    <field name="agreed_amount"/>
                    <field name="due_date"/>
                    <field name="automatic_renovation"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="acuerdos_form">
            <field name="name">ACUMAR Acuerdos form</field>
            <field name="model">acumar.acuerdo</field>
            <field name="arch" type="xml">
                <form string="Acuerdo" >
                    <header>
                        <button name="action_cancel" states="running,draft,sd" type="object" string="Cancelar" />
                        <field name="state" widget="statusbar" 
                               statusbar_colors='{"canceled":"red","terminated":"grey","running":"green"}'/>
                    </header>
                    <sheet width="90%">
                      <h1>
                          <field name="name" class="oe_inline" />
                          <br/>
                          <label for="sequence"/>:
                          <field name="sequence"/>
                      </h1>
                      <group>
                          <group name="main_info">
                            <field name="tematica_id"/>
                            <field name="goal"/>
                            <field name="partners" widget="many2many_tags"/>
                            <field name="agreed_amount"/>
                            <field name="current_situation"/>
                          </group>
                          <group name="dates">
                            <field name="suscription_date"/>
                            <field name="due_date"/>
                            <field name="automatic_renovation"/>
                            <field name="to_be_checked"/>
                            <field name="renovation_description"/>
                          </group>
                          <group name="approval">
                            <field name="dc_approval"/>
                            <field name="order_year"/>
                            <field name="expediente"/>
                          </group>
                          <group name="notes">
                            <field name="alert"/>
                            <field name="notes_1"/>
                            <field name="notes_2"/>
                          </group>
                      </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="acuerdos_search" >
            <field name="name">ACUMAR Acuerdos search</field>
            <field name="model">acumar.acuerdo</field>
            <field name="arch" type="xml">
                <search string="Search background jobs">
                    <filter string="Borrador" name="initialized" domain="[('state','=','draft')]" />
                    <filter string="Faltan datos" name="started" domain="[('state','=','sd')]" />
                    <filter string="En ejecución" name="started" domain="[('state','=','running')]" />
                    <filter string="Por terminar" name="started" domain="[('state','=','to_extend')]" />
                    <field name="name"/>
                    <field name="partners"/>
                    <group expand="0" string="Agrupado por..." colspan="4" col="10">
                        <filter string="Estado" name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Tematica" name="group_by_tematica" domain="[]" context="{'group_by':'tematica_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="acuerdos_action" model="ir.actions.act_window">
            <field name="name">Acuerdos</field>
            <field name="res_model">acumar.acuerdo</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Contrapartes -->

        <record model="ir.ui.view" id="contrapartes_tree">
            <field name="name">ACUMAR Contrapartes tree</field>
            <field name="model">acumar.contraparte</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="string">Contrapartes</attribute>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="contraparte_form">
            <field name="name">ACUMAR Contrapartes form</field>
            <field name="model">acumar.contraparte</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form position="attributes">
                    <attribute name="string">Contraparte</attribute>
                </form>
                <notebook position="inside">
                    <page name="acuerdos" string="Acuerdos">
                        <group>
                            <field name="acuerdos" nolabel="1"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="contrapartes_search" >
            <field name="name">ACUMAR Contrapartes search</field>
            <field name="model">acumar.contraparte</field>
            <field name="arch" type="xml">
                <search string="Search contrapartes">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="contrapartes_action" model="ir.actions.act_window">
            <field name="name">Contrapartes</field>
            <field name="res_model">acumar.contraparte</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Temática -->

        <record model="ir.ui.view" id="tematicas_tree">
            <field name="name">ACUMAR Temáticas tree</field>
            <field name="model">acumar.tematica</field>
            <field name="arch" type="xml">
                <tree string="Temáticas" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="tematicas_action" model="ir.actions.act_window">
            <field name="name">Temáticas</field>
            <field name="res_model">acumar.tematica</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</openerp>
