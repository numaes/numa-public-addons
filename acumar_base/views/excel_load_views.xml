<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="carga_excel_form">
            <field name="name">ACUMAR Carga de excel form</field>
            <field name="model">acumar.excel_load_wizard</field>
            <field name="arch" type="xml">
                <form string="Carga de excel">
                    <group>
                        <field name="filedata" />
                        <field name="state" invisible="True" />
                        <field name="error_msgs"
                               attrs="{'invisible': [('state', '=', 'draft')]}" />
                    </group>
                    <footer>
                        <button name="action_import"
                                type="object"
                                string="Importar datos"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="carga_excel_action" model="ir.actions.act_window">
            <field name="name">Acuerdos</field>
            <field name="res_model">acumar.excel_load_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
