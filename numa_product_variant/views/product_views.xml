<?xml version="1.0"?>
<odoo>
    <data>
    
        <!-- Product Attribute -->

        <record model="ir.ui.view" id="product_attribute_tree_view">
            <field name="name">Product Attribute Tree</field>
            <field name="model">product.attribute</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.attribute_tree_view" />
            <field name="arch" type="xml">
                <tree position="inside">
                    <field name="code_identifier" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="product_attribute_form_view">
            <field name="name">Product Attribute Form</field>
            <field name="model">product.attribute</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_attribute_view_form" />
            <field name="arch" type="xml">
                <group name="main_fields" position="inside">
                    <field name="code_identifier" />
                    <field name="default_value" />
                    <field name="change_on_create" />
                </group>
                <xpath expr="//page/field[@name='value_ids']/tree/field[@name='name']" position="before">
                    <field name="code_value"/>
                    <field name="value_on_create"/>
                    <field name="weight_factor"/>
                </xpath>
            </field>
        </record>

        <!-- Product Attribute Value -->

        <record model="ir.ui.view" id="product_template_attribute_value_view_form">
            <field name="name">Product Attribute Value Form</field>
            <field name="model">product.template.attribute.value</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_template_attribute_value_view_form" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="code_value" />
                </field>
            </field>
        </record>

        <!-- Product Category -->

        <record model="ir.ui.view" id="product_category_form_view">
            <field name="name">Product Category Form</field>
            <field name="model">product.category</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_category_form_view" />
            <field name="arch" type="xml">
                <group name="first" position="after">
                    <group name="default_attributes" col="2">
                        <field name="product_attribute_ids" />
                    </group>
                </group>
            </field>
        </record>

        <!-- Product Template -->

        <record model="ir.ui.view" id="product_template_only_form_view">
            <field name="name">Product Template Form</field>
            <field name="model">product.template</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="default_code" position="after">
                    <field name="base_code" />
                </field>
                <header position="inside">
                    <button name="action_manual_variant_creation" type="object"
                        icon="fa-sitemap" class="oe_stat_button"
                        groups="product.group_product_variant"
                        string="Manually create variant"/>
                </header>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_search_view">
            <field name="name">Product Template Search</field>
            <field name="model">product.template</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_template_search_view" />
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="name" string="Product" filter_domain="['|', '|', '|', ('default_code', 'ilike', self), ('base_code', 'ilike', self),('name', 'ilike', self), ('barcode', 'ilike', self)]"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_tree_view">
            <field name="name">Product Template Tree</field>
            <field name="model">product.template</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="base_code" string="Base Code"/>
                </field>
                <field name="default_code" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_kanban_view">
            <field name="name">Product Template Kanban</field>
            <field name="model">product.template</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="product.product_template_kanban_view" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="base_code" string="Base Code"/>
                </field>
            </field>
        </record>


        <record model="ir.ui.view" id="product_cmvariant_form_view">
            <field name="name">Product Template Form</field>
            <field name="model">product.cmvariant</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                    </header>
                        <field name="template_id" invisible="True"/>

                        <group col="1">
                            <group attrs="{'invisible': [('attribute0','=',False)]}">
                                <field name="attribute0" nolabel="1" readonly="True"/>
                                <field name="value0" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute0)]"
                                       attrs="{'required': [('required0','=',True)]}"/>
                                <field name="required0" invisible="True"/>
                            </group>
                            <group attrs="{'invisible': [('attribute1','=',False)]}">
                                <field name="attribute1" nolabel="1" readonly="True"/>
                                <field name="value1" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute1)]"
                                       attrs="{'required': [('required1','=',True)]}"/>
                                <field name="required1" invisible="True"/>
                            </group>
                            <group attrs="{'invisible': [('attribute2','=',False)]}">
                                <field name="attribute2" nolabel="1" readonly="True"/>
                                <field name="value2" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute2)]"
                                       attrs="{'required': [('required2','=',True)]}"/>
                                <field name="required2" invisible="True"/>
                            </group>
                            <group attrs="{'invisible': [('attribute3','=',False)]}">
                                <field name="attribute3" nolabel="1" readonly="True"/>
                                <field name="value3" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute3)]"
                                       attrs="{'required': [('required3','=',True)]}"/>
                                <field name="required3" invisible="True"/>
                            </group>
                            <group attrs="{'invisible': [('attribute4','=',False)]}">
                                <field name="attribute4" nolabel="1" readonly="True"/>
                                <field name="value4" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute4)]"
                                       attrs="{'required': [('required4','=',True)]}"/>
                                <field name="required4" invisible="True"/>
                            </group>
                            <group attrs="{'invisible': [('attribute5','=',False)]}">
                                <field name="attribute5" nolabel="1" readonly="True"/>
                                <field name="value5" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute5)]"
                                       attrs="{'required': [('required5','=',True)]}"/>
                                <field name="required5" invisible="1"/>
                            </group>
                            <group attrs="{'invisible': [('attribute6','=',False)]}">
                                <field name="attribute6" nolabel="1" readonly="True"/>
                                <field name="value6" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute6)]"
                                       attrs="{'required': [('required6','=',True)]}"/>
                                <field name="required6" invisible="True"/>
                            </group>
                            <group attrs="{'invisible': [('attribute7','=',False)]}">
                                <field name="attribute7" nolabel="1" readonly="True"/>
                                <field name="value7" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute7)]"
                                       attrs="{'required': [('required7','=',True)]}"/>
                                <field name="required7" invisible="True"/>
                            </group>
                            <group attrs="{'invisible': [('attribute8','=',False)]}">
                                <field name="attribute8" nolabel="1" readonly="True"/>
                                <field name="value8" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute8)]"
                                       attrs="{'required': [('required8','=',True)]}"/>
                                <field name="required8" invisible="True"/>
                            </group>
                            <group attrs="{'invisible': [('attribute9','=',False)]}">
                                <field name="attribute9" nolabel="1" readonly="True"/>
                                <field name="value9" nolabel="1"
                                       domain="[('attribute_line_id','=',attribute9)]"
                                       attrs="{'required': [('required9','=',True)]}"/>
                                <field name="required9" invisible="True"/>
                            </group>
                        </group>

                    <footer>
                        <button name="action_create_new_variant" type="object"
                                string="Manually create variant"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
