<?xml version="1.0"?>
<openerp>
    <data>
    
    <!-- Products template Form View -->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <data>
                <field name="list_price" position="replace" >
                    <group name="list_price_div" groups="base.group_user">
                        <field name="list_price" class="oe_inline" nolabel="1"
                               widget="monetary"
                               options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                        <field name="currency_id" class="oe_edit_only"  nolabel="1"
                               options="{'no_create_edit':1}"/>
                    </group>
                </field>
                <field name="standard_price" position="replace" >
                    <group name="standard_price_div" groups="base.group_user">
                        <field name="standard_price" class="oe_inline" nolabel="1"
                               widget="monetary"
                               options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                        <field name="cost_currency_id" class="oe_edit_only" nolabel="1"
                               options="{'no_create_edit':1}"/>
                    </group>
                </field>
            </data>
        </field>
    </record>

    </data>
</openerp>
