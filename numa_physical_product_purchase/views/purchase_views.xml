<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="purchase_order_physical_form_view">
            <field name="name">purchase.order.physical.form</field>
            <field name="model">purchase.order</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form/field[@name='name']" position="after">
                    <group>
                        <group>
                            <field name="unit_width"/>
                            <field name="unit_length"/>
                            <field name="unit_height"/>
                        </group>
                        <group>
                            <field name="unit_surface"/>
                            <field name="unit_weight"/>
                            <field name="unit_volume"/>
                        </group>
                        <group>
                            <field name="total_surface" readonly="True" force_save="True"/>
                            <field name="total_weight" readonly="True" force_save="True"/>
                            <field name="total_volume" readonly="True" force_save="True"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//div[@name='reminder']" position="after">
                    <group string="Package Information" name="package_information">
                        <field name="po_weight"/>
                        <field name="po_volume"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                    <field name="unit_price_uom_id"/>
                    <field name="price_qty"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="unit_price_uom_id"/>
                    <field name="price_qty"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
