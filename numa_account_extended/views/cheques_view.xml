<?xml version="1.0" ?>
<odoo>
    <data>

		<template id="numa_account_extended_css" name="numa_account_extended_css" inherit_id="web.assets_backend">
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/numa_account_extended/static/src/css/numa_account_extended.css"/>
			</xpath>
		</template>

		<record id="numa_account_bank_kanban_view" model="ir.ui.view">
            <field name="name">Bank Kanban</field>
            <field name="model">res.bank</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="image"/>
                    <field name="name"/>
                    <field name="bic"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
								<div class="o_kanban_tags_section">
									<div class="o_kanban_image">
										<a type="open"><img t-att-src="kanban_image('res.bank', 'image', record.id.value)" class="oe_kanban_image"/></a>
									</div>
									<div class="oe_kanban_details">
										<h4>
											<ul>
												<li>[<field name="bic"/>]</li>
												<li style="{line-height:20px;}"><a type="open"><field name="name"/></a></li>
											</ul>
										</h4>
									</div>
								</div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="numa_account_bank_form_view" model="ir.ui.view">
            <field name="name">Banks Form</field>
            <field name="model">res.bank</field>
			<field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
				<xpath expr="//form" position="replace">
					<form string="Banco">
						<header>

						</header>
						<sheet>
							<div class="oe_right oe_button_box" name="buttons">
								<div>

								</div>
							</div>
							<field name="image" widget="image" class="oe_avatar"/>
							<div class="oe_title">
								<label for="name"/>
								<h1>
									<field name="name"/>
								</h1>
								<label for="bic"/>
								<h3>
									<field name="bic" required="1" style="width:150px !important;"/>
								</h3>
							</div>
							<group>

							</group>
							<notebook>
								<page name="general" string="General">
									<group col="8" colspan="4">
										<group colspan="4">
											<field name="active"/>
											<field name="partner_id"/>
											<field name="clearing_propio" style="width:200px !important;"/>
										</group>
									</group>
									<group>
										<group string="Address">
											<label for="street" string="Address"/>
											<div class="o_address_format">
												<field name="street" placeholder="Street..." class="o_address_street"/>
												<field name="street2" placeholder="Street 2..." class="o_address_street"/>
												<field name="city" placeholder="City" class="o_address_city"/>
												<field name="state" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
												<field name="zip" placeholder="ZIP" class="o_address_zip"/>
												<field name="country" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
											</div>
										</group>
										<group string="Communication">
											<field name="phone"/>
											<field name="fax"/>
											<field name="email" widget="email"/>
										</group>
									</group>
								</page>
								<page name="branch" string="Sucursales">
									<field name="bank_branch_ids" nolabel="1">
										<tree class="numa_bank_branch">
											<field name="image" widget="image" height="30"/>
											<field name="branch_code"/>
											<field name="branch_name"/>
											<field name="clearing_en_sucursal"/>
											<field name="branch_address"/>
										</tree>
										<form string="Sucursales Bancarias">
											<header>

											</header>
											<sheet>
												<div class="oe_right oe_button_box" name="buttons">
													<div>

													</div>
												</div>
												<field name="image" widget="image" class="oe_avatar"/>
												<div class="oe_title">
													<label for="branch_name"/>
													<h1>
														<field name="branch_name"/>
													</h1>
												</div>
												<group>

												</group>
												<notebook>
													<page name="general" string="General">
														<group col="8" colspan="4">
															<group colspan="4">
																<field name="branch_code" style="width:200px !important"/>
															</group>
															<group colspan="4">
																<field name="clearing_en_sucursal"/>
																<field name="branch_address"/>
																<field name="notes"/>
															</group>
														</group>
													</page>
												</notebook>
											</sheet>
										</form>
									</field>
								</page>
							</notebook>
						</sheet>
					</form>
				</xpath>
			</field>
		</record>

		<record id="numa_bank_tree_view" model="ir.ui.view">
            <field name="name">res.bank.tree</field>
            <field name="model">res.bank</field>
			<field name="inherit_id" ref="base.view_res_bank_tree"/>
            <field name="arch" type="xml">
				<xpath expr="//tree" position="replace">
					<tree string="Banks" class="numa_bank">
						<field name="image" widget="image" height="30"/>
						<field name="bic"/>
						<field name="name"/>
						<field name="partner_id"/>
						<field name="clearing_propio"/>
						<field name="country"/>
					</tree>
				</xpath>
            </field>
        </record>

		<record id="numa_bank_search_view" model="ir.ui.view">
            <field name="name">res.bank.search</field>
            <field name="model">res.bank</field>
            <field name="arch" type="xml">
				<search>
					<field name="name"/>
					<field name="bic"/>
				</search>
            </field>
        </record>

		<record id="numa_account_bank_branch_search_view" model="ir.ui.view">
            <field name="name">numa.bank_branch.search</field>
            <field name="model">account.bank.branch</field>
            <field name="arch" type="xml">
                <search string="Sucursales Bancarias" >
					<field name="branch_name"/>
					<field name="branch_code"/>
					<field name="bank_id"/>
					<group expand="1" name="group_by" string="Group By">
						<filter string="Banco" context="{'group_by': 'bank_id'}"/>
                        <filter string="Clearing" context="{'group_by': 'clearing_en_sucursal'}"/>
					</group>
                </search>
            </field>
        </record>

		<record id="numa_account_bank_branch_tree_view" model="ir.ui.view" >
            <field name="name">numa.bank_branch.tree</field>
            <field name="model">account.bank.branch</field>
			<field name="context">{'show_bank_code':'show_code'}</field>
            <field name="arch" type="xml">
				<tree string="Sucursales Bancarias" class="numa_bank_branch">
					<field name="image" widget="image" height="30"/>
					<field name="branch_code"/>
					<field name="branch_name"/>
					<field name="bank_id"/>
					<field name="clearing_en_sucursal"/>
					<field name="branch_address"/>
				</tree>
            </field>
        </record>

        <record id="numa_account_bank_branch_form_view" model="ir.ui.view">
            <field name="name">numa.bank_branch.form</field>
            <field name="model">account.bank.branch</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sucursales Bancarias">
					<header>

					</header>
					<sheet>
						<div class="oe_right oe_button_box" name="buttons">
							<div>

							</div>
						</div>
						<field name="image" widget="image" class="oe_avatar"/>
						<div class="oe_title">
							<label for="branch_name"/>
							<h1>
								<field name="branch_name"/>
							</h1>
							<label for="branch_code"/>
							<h3>
								<field name="branch_code" style="width:200px !important"/>
							</h3>
						</div>
						<group>
						</group>
						<notebook>
							<page name="general" string="General">
								<group col="8" colspan="4">
									<group colspan="4">
										<field name="bank_id"/>
									</group>
									<group colspan="4">
										<field name="clearing_en_sucursal"/>
										<field name="branch_address"/>
										<field name="notes"/>
									</group>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
            </field>
        </record>

		<record id="numa_account_partner_bank_kanban_view" model="ir.ui.view">
            <field name="name">Partner Bank Kanban</field>
            <field name="model">res.partner.bank</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="image"/>
                    <field name="bank_id"/>
                    <field name="bank_branch_id"/>
					<field name="acc_number"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
								<div class="o_kanban_tags_section">
									<div class="o_kanban_image">
										<a type="open"><img t-att-src="kanban_image('res.partner.bank', 'image', record.id.value)" class="oe_kanban_image"/></a>
									</div>
									<div class="oe_kanban_details">
										<h4>
											<ul>
												<li><field name="partner_id"/></li>
												<li><a type="open"><field name="acc_number"/></a></li>
											</ul>
										</h4>
										<ul>
											<li><field name="bank_account_type"/> [<field name="currency_id"/>]</li>
                                            <li><field name="bank_id"/></li>
											<li><field name="bank_branch_id"/></li>
										</ul>
									</div>
								</div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

		<record id="numa_account_partner_bank_form_view" model="ir.ui.view">
            <field name="name">Partner Banks Form</field>
            <field name="model">res.partner.bank</field>
			<field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
				<xpath expr="//form" position="replace">
					<form string="Cuenta Bancaria">
						<header>

						</header>
						<sheet>
							<div class="oe_right oe_button_box" name="buttons">
								<div>

								</div>
							</div>
							<field name="image" widget="image" class="oe_avatar"/>
							<div class="oe_title">
								<label for="acc_number"/>
								<h1>
									<field name="acc_number" />
								</h1>
							</div>
							<group>

							</group>
							<notebook>
								<page name="general" string="General">
									<group col="8" colspan="4">
										<group col="4" colspan="4">
											<group string="Datos Cuenta Bancaria" colspan="4">
												<field name="bank_id" attrs="{'required': True}"/>
												<field name="bank_branch_id" domain="[('bank_id','=',bank_id)]" attrs="{'readonly':[('bank_id','=',False)]}"/>
												<field name="bank_account_type"/>
												<field name="bank_account_code"/>
												<field name="bank_cbu"/>
												<field name="bank_alias"/>
											</group>
											<group string="Contable" colspan="4">
												<field name="journal_bank_id"/>
												<field name="amount_max_issue" attrs="{'invisible':[('cuenta_propia','=',False)]}"/>
												<field name="amount_max_received" attrs="{'invisible':[('cuenta_propia','!=',False)]}"/>
												<field name="currency_id" groups="base.group_multi_currency" options="{'no_create': True}"/>
												<field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
											<field name="notes"/>
											</group>
										</group>
										<group col="4" colspan="4">
											<group string="Titular" colspan="4">
												<field name="cuenta_propia" invisible="1"/>
												<field name="alert" attrs="{'invisible':[('cuenta_propia','!=',False)]}"/>
												<field name="partner_id"/>
												<field name="name_titular" attrs="{'invisible':[('partner_id','!=',False)]}"/>
												<field name="cuit_titular" attrs="{'invisible':[('partner_id','!=',False)]}"/>
												<field name="address_titular" attrs="{'invisible':[('partner_id','!=',False)]}"/>
											</group>
											<group string="Firmantes" colspan="4">
												<field name="signer_ids">
													<tree editable="bottom">
														<field name="name"/>
														<field name="valid_signers_til"/>
													</tree>
												</field>
												<field name="min_count_of_signers"/>
											</group>
										</group>
									</group>
								</page>
								<page name="check_notebook" string="Chequeras" attrs="{'invisible':[('cuenta_propia','=',False)]}">
									<group>
										<field name="check_notebook_ids" nolabel="1"/>
									</group>
								</page>
								<page name="check_third_party" string="Cheques" attrs="{'invisible':[('cuenta_propia','!=',False)]}">
									<group>
										<field name="check_third_party_ids" nolabel="1"/>
									</group>
								</page>
							</notebook>
						</sheet>
					</form>
				</xpath>
			</field>
		</record>

		<record id="numa_account_partner_bank_tree_view" model="ir.ui.view">
            <field name="name">Partner Banks Tree</field>
            <field name="model">res.partner.bank</field>
			<field name="inherit_id" ref="base.view_partner_bank_tree"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='acc_number']" position="before">
					<field name="image" widget="image" height="30"/>
				</xpath>
				<xpath expr="//field[@name='bank_name']" position="replace">
					<field name="bank_id"/>
					<field name="bank_branch_id"/>
				    <field name="bank_cbu"/>
					<field name="bank_alias"/>
					<field name="currency_id"/>
					<field name="alert"/>
					<field name="cuenta_propia" invisible="1"/>
				</xpath>
			</field>
		</record>

		<record id="numa_account_partner_bank_search_view" model="ir.ui.view">
            <field name="name">Partner Banks Search</field>
            <field name="model">res.partner.bank</field>
			<field name="inherit_id" ref="base.view_partner_bank_search"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='bank_name']" position="after">
					<field name="cuenta_propia" invisible="1"/>
					<filter string="Cuenta Propia" name="cuenta_propia" domain="[('cuenta_propia','=',True')]"/>
					<filter string="Cuentas > Alerta" name="alert" domain="[('alert','=',True')]"/>
					<group expand="1" name="group_by" string="Group By">
						<filter string="Empresa" context="{'group_by': 'partner_id'}" />
						<filter string="Banco" context="{'group_by': 'bank_id'}"/>
                        <filter string="Tipo Cuenta" context="{'group_by': 'bank_account_type'}"/>
						<filter string="Moneda" context="{'group_by': 'currency_id'}"/>
					</group>
				</xpath>
			</field>
		</record>

		<record id="numa_account_check_notebook_form_view" model="ir.ui.view">
            <field name="name">Check Notebook Form</field>
            <field name="model">account.check.notebook</field>
            <field name="arch" type="xml">
				<form string="Chequera">
					<header>
						<button string="To Draft" type="object" name="action_draft" states="in_use"/>
						<button string="In Use" type="object" name="action_in_use" states="draft,stand_by"/>
						<button string="Stand By" type="object" name="action_stand_by" states="draft,in_use"/>
						<button string="Fully Used" type="object" name="action_fully_used" states="in_use"/>
						<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<div class="oe_right oe_button_box" name="buttons">
							<div>

							</div>
						</div>
						<field name="image" widget="image" class="oe_avatar"/>
						<div class="oe_title">
							<label for="name"/>
							<h1>
								<field name="name" />
							</h1>
							<label for="bank_account_id"/>
							<h3>
								<field name="bank_account_id"/>
							</h3>
						</div>
						<field name="id" invisible="1"/>
						<group>

						</group>
						<notebook>
							<page name="general" string="General">
								<group col="8" colspan="4">
									<group string="Chequera" colspan="4">
										<field name="bank_rel"/>
										<field name="bank_branch_rel"/>
										<field name="check_type"/>
										<field name="start_number"/>
										<field name="end_number"/>
										<field name="total_qty"/>
										<field name="printed_form_type"/>
									</group>
									<group string="Estado" colspan="4">
										<field name="next_to_use"/>
										<field name="available_qty"/>
										<field name="last_check_on"/>
										<field name="alert_on"/>
										<field name="notes"/>
									</group>
								</group>
							</page>
							<page name="checks" string="Cheques" attrs="{'invisible':[('state','=','draft')]}">
								<group colspan="4">
									<field name="check_ids" nolabel="1" context="{'default_notebook_id': id}">
										<tree string="Cheques Propios" class="numa_check_notebook">
											<field name="image" widget="image" height="30"/>
											<field name="front_image" widget="image" height="30"/>
											<field name="bank_id"/>
											<field name="bank_account_id"/>
											<field name="check_number"/>
											<field name="amount"/>
											<field name="currency_id"/>
											<field name="issue_date"/>
											<field name="valid_from_date"/>
											<field name="payment_date"/>
											<field name="state"/>
										</tree>
										<form string="Cheque Propio">
											<header>
												<button string="To Draft" type="object" name="action_draft" states="issued"/>
												<button string="Issue" type="object" name="action_issued" states="draft,payed,rejected,canceled"/>
												<button string="Delivered" type="object" name="action_delivered" states="issued"/>
												<button string="Pay" type="object" name="action_payed" states="delivered"/>
												<button string="Reject" type="object" name="action_rejected" states="delivered"/>
												<button string="Cancel" type="object" name="action_canceled" states="draft,issued"/>
												<button string="Availability" type="object" name="action_availability" states="draft,issued"/>
												<field name="state" widget="statusbar"/>
											</header>
											<sheet>
												<div class="oe_right oe_button_box" name="buttons">
													<div>

													</div>
												</div>
												<field name="image" widget="image" class="oe_avatar"/>
												<div class="oe_title">
													<label for="check_number"/>
													<h1>
														<field name="check_number"/>
													</h1>
													<label for="notebook_id" readonly="1"/>
													<h3>
														<field name="notebook_id" readonly="1"/>
													</h3>
												</div>
												<group>

												</group>
												<notebook>
													<page name="general" string="General">
														<group name="general" col="8" colspan="4">
															<group name="micr" col="4" colspan="8">
																<field name="micr" colspan="4"/>
															</group>
															<group name="front" col="4" colspan="4">
																<field name="front_image" widget="image" colspan="4"/>
															</group>
															<group name="back" col="4" colspan="4">
																<field name="back_image" widget="image" colspan="4"/>
															</group>
															<group name="account" string="Cheque" col="4" colspan="4">
																<field name="bank_id" colspan="4"/>
																<field name="bank_account_id" colspan="4"/>
																<field name="amount" colspan="4"/>
																<field name="currency_id" colspan="4"/>
																<field name="issue_date" colspan="4"/>
																<field name="valid_from_date" colspan="4"/>
																<field name="payment_date" colspan="4"/>
															</group>
															<group string="Historial" col="4" colspan="4">
																<field name="handed_to" colspan="4"/>
																<field name="handed_on" colspan="4"/>
																<field name="handed_move_line_id" colspan="4"/>
																<field name="payed_on" colspan="4"/>
																<field name="payed_move_line_id" colspan="4"/>
																<field name="rejected_on" colspan="4"/>
																<field name="rejected_move_line_id" colspan="4"/>
															</group>
														</group>
													</page>
													<page string="Firmantes" name="signers">
														<field name="signers" nolabel="1"/>
													</page>
													<page string="Notas" name="notes">
														<group>
															<field name="pay_to"/>
															<field name="notes"/>
														</group>
													</page>
												</notebook>
											</sheet>
										</form>
									</field>
								</group>
							</page>
						</notebook>
					</sheet>
					<sheet position="after">
						<div class="oe_chatter">
							<field name="message_follower_ids" widget="mail_followers" />
							<field name="message_ids" widget="mail_thread" />
						</div>
					</sheet>
				</form>
			</field>
		</record>

		<record id="numa_account_check_notebook_kanban_view" model="ir.ui.view">
            <field name="name">Check Notebook Kanban</field>
            <field name="model">account.check.notebook</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="image"/>
                    <field name="bank_account_id"/>
					<field name="start_number"/>
                    <field name="end_number"/>
					<field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
								<div class="o_kanban_tags_section">
									<div class="o_kanban_image">
										<a type="open"><img t-att-src="kanban_image('account.check.notebook', 'image', record.id.value)" class="oe_kanban_image"/></a>
									</div>
									<div class="oe_kanban_details">
										<h4>
											<ul>
												<li><a type="open"><field name="bank_account_id"/></a></li>
											</ul>
										</h4>
										<ul>
											<li><field name="start_number"/></li>
                                            <li><field name="end_number"/></li>
											<li><field name="state"/></li>
										</ul>
									</div>
